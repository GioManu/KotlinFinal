<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/main_cityName"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="38dp"
        android:layout_toEndOf="@+id/imageView"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:text="Tbilisi,  Georgia" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="27dp"
        android:layout_height="22dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="112dp"
        android:layout_marginTop="57dp"
        app:srcCompat="@drawable/location" />

    <TextView
        android:id="@+id/main_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_cityName"
        android:layout_centerVertical="true"
        android:layout_marginStart="-33dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/main_weatherImg"
        android:textAlignment="center"
        android:textSize="60sp"
        tools:text="27Â°c" />

    <ImageView
        android:id="@+id/main_weatherImg"
        android:layout_width="175dp"
        android:layout_height="122dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-3dp"
        app:srcCompat="@drawable/ic10d" />

    <TextView
        android:id="@+id/main_weather_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="192dp"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="italic"
        tools:text="Partly Cloud" />

</RelativeLayout>