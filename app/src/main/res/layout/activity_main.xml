<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity" >

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="240dp"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/main_header_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.cst.kotlinfinal.fragments.FragmentMain"/>

    <FrameLayout
        android:id="@+id/main_weather_hours_fragment"
        android:layout_below="@+id/main_header_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.cst.kotlinfinal.fragments.FragmentWeatherHours"/>

</RelativeLayout>
